# The Infinite Closet (TIC) - Docker Environment Configuration
# Copy this file to .env.local and update with your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (Main Database)
DB_POSTGRES_PASSWORD=secure_postgres_pass_change_me
POSTGRES_USER=tic_user
POSTGRES_PASSWORD=secure_postgres_pass_change_me
POSTGRES_DB=tic_main
DATABASE_URL=postgresql://tic_user:secure_postgres_pass_change_me@postgres:5432/tic_main

# MongoDB (User Profiles & Fashion Data)
DB_MONGO_PASSWORD=secure_mongo_pass_change_me
MONGO_INITDB_ROOT_PASSWORD=secure_mongo_pass_change_me
MONGO_INITDB_ROOT_USERNAME=tic_admin
MONGO_INITDB_DATABASE=tic_fashion
MONGODB_URI=mongodb://tic_admin:secure_mongo_pass_change_me@mongodb:27017/tic_fashion?authSource=admin

# Redis (Caching & Sessions)
REDIS_PASSWORD=secure_redis_pass_change_me
REDIS_URL=redis://:secure_redis_pass_change_me@redis:6379

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=change_this_to_secure_random_string_in_production
JWT_EXPIRATION=7d

# API Keys & Secrets
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ============================================================================
# EXTERNAL SERVICES & INTEGRATIONS
# ============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@talkmalk.com
SMTP_FROM_NAME=The Infinite Closet

# AWS S3 (for image/model storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=tic-fashion-assets

# Stripe Payment (for commerce)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Cloud Vision API (for garment recognition)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_API_KEY=your_api_key

# AI Services
OPENAI_API_KEY=sk_your_openai_key
HF_TOKEN=hf_your_huggingface_token

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

REACT_APP_API_URL=http://localhost:3000
REACT_APP_WEBSOCKET_URL=ws://localhost:3000
REACT_APP_AR_ENABLED=true
REACT_APP_ANALYTICS_ID=your_analytics_id

# ============================================================================
# MICROSERVICES CONFIGURATION
# ============================================================================

# AI Stylist Service
AI_STYLIST_PORT=8000
AI_STYLIST_URL=http://ai-stylist:8000

# Avatar Generation Service
AVATAR_GEN_PORT=8001
AVATAR_GEN_URL=http://avatar-gen:8001

# Commerce Bridge Service
COMMERCE_BRIDGE_PORT=8002
COMMERCE_BRIDGE_URL=http://commerce-bridge:8002

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key

# ============================================================================
# FEATURES & FLAGS
# ============================================================================

# Feature Flags
FEATURE_AR_MIRROR=true
FEATURE_SOCIAL_RUNWAY=true
FEATURE_MARKETPLACE=true
FEATURE_AI_STYLIST=false
FEATURE_NFT_FASHION=false

# AR Configuration
AR_HAND_TRACKING_ENABLED=true
AR_GESTURE_RECOGNITION=true
AR_PHYSICS_SIMULATION=true

# ============================================================================
# DOCKER & DEPLOYMENT
# ============================================================================

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEY_PATH=/etc/nginx/ssl/private.key
SSL_CERT_PATH=/etc/nginx/ssl/certificate.crt

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# ============================================================================
# DOMAIN & HOST
# ============================================================================

NEXT_PUBLIC_SITE_URL=http://talkmalk.com
DOMAIN=talkmalk.com
